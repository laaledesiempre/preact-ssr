{
  "name": "preact-ssr",
  "version": "1.0.0",
  "description": "",
  "main": "./src/server/index.js",
  "scripts": {
    "dev": "nodemon --watch build build/server/index.js",
    "swc": "swc ./src -d build -w",
    "browserify": "watchify ./build/server/client.entry.js -p esmify -o ./build/server/bundle.js",
    "buildcss": "nodemon --watch ./src/**.css --exec 'lightningcss --minify --bundle ./src/**.css --output-dir ./build/css'",
    "start": "npm-run-all --parallel dev browserify swc buildcss"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "compression": "^1.7.4",
    "express": "^4.18.2",
    "preact": "^10.18.2",
    "preact-render-to-string": "^6.3.0",
    "react": "npm:@preact/compat@^17.1.2",
    "react-dom": "npm:@preact/compat@^17.1.2",
    "react-router-dom": "^6.18.0"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.96",
    "browserify": "^17.0.0",
    "chokidar": "^3.5.3",
    "esmify": "^2.1.1",
    "lightningcss-cli": "^1.22.1",
    "nodemon": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "watch-run": "^1.2.5",
    "watchify": "^4.0.0"
  }
}
